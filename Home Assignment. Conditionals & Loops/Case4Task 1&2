// Pulse Oximeter Reading Part 1
        // Develop a javascript compatible app with smartwatches
        // Use pulse sensor to tell user if oxygen level is normal or alarming
        // Write a function oxygenSaturation, that alerts a user and interprets the reading.

// Use the oxymeterReading keyword to declare a variable reading.
let oxymeterReading = 100;

//Add an if statement to check if the oxymeterReading is ≥ 95.
    //Inside the if block, console.log the sentence: "Normal Reading".
//Add an else if to check if the oxymeterReading is 95. 
    //Inside the if block, console.log the sentence: "Acceptable to continue home monitoring".
//Add an else if to check if the oxymeterReading ≥ 92 and <95.
    //Inside the if block, console.log the sentence: "Seek advice from health professionals.".
//Add another else if to check if the oxymeterReading < 92.
    //Inside the if block, console.log the sentence: "Seek urgent medical advice".
// Add an else statement to capture any other value. 
    //  Inside the block, type console.log the sentence "ERROR"

function oxygenSaturation(oxymeterReading){
    if(oxymeterReading >= 95){
        console.log("Normal Reading");
    } else if (oxymeterReading == 95){
        console.log("Acceptable to continue home monitoring");
    } else if ((oxymeterReading >= 92) && (oxymeterReading <95)){
       console.log("Seek advice from health professionals."); 
    } else if (oxymeterReading < 92){
        console.log("Seek urgent medical advice");
       }
}
oxygenSaturation(oxymeterReading);

// yebahhh continuing part 2
// More observations based on pulse rate.
        // Use the pulseRateReading keyword to declare a variable reading.

let pulseRate = 100;

    // Add an if statement to check if the pulseRateReading is between 40 to 100.
        // Inside the if block, console.log the sentence: "Normal Reading".

    // Add and else if to check if the pulseRateReading is between 101 to 109.
        // Inside the if block, console.log the sentence: "Acceptable to continue home monitoring."

    // Add and else if to check if the pulseRateReading is between 110-130.
        // Inside the if block, console.log the sentence "Seek advice from health professionals."

    // Add another else if to check if the pulseRateReading is ≥131.
        // Inside the if block, console.log the sentence "Seek Urgent medical advice."

    // Add an else statement to capture any other value. 
    //  Inside the block, type console.log the sentence "Buhay ka pa ba wala na tibok puso mo?!"

    function pulseRateReading(pulseRate){
        if ((pulseRate >= 40) && (pulseRate <= 100)){
            console.log("Normal Reading");
        } else if ((pulseRate >= 101) && (pulseRate <= 109)){
            console.log("Acceptable to continue home monitoring");
        } else if ((pulseRate >= 110) && (pulseRate <= 130)){
            console.log("Seek advice from health professionals.");
        } else if (pulseRate >=131){
            console.log("Seek Urgent medical advice.");
        } else {
            console.log("Buhay ka pa ba wala na tibok puso mo?!");
        }
    }
pulseRateReading(pulseRate);
